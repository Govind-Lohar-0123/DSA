1]with stack
2]without stack
#include <bits/stdc++.h>
class Solution {
public:
    int minimumDeletions(string s) {
        int n=s.length();
        int freq[n];
        fill_n(freq,n,0);
       
      
        int i=-1;
        int ans=0;
        int j=0;
        while(j<n){
            while(j<n && i!=-1 && s[j]=='a' && s[i]=='b'){
                ans++;
                i--;
                j++;
            }
            if(j<n)s[++i]=s[j];
            j++;
        }
        return ans;
    }
};
#include <bits/stdc++.h>
class Solution {
public:
    int minimumDeletions(string s) {
        int n=s.length();
        int freq[n];
        fill_n(freq,n,0);
       
      
        stack<int>st;
        int ans=0;
        int j=0;
        while(j<n){
            while(j<n && st.size()!=0 && s[j]=='a' && s[st.top()]=='b'){
                ans++;
                st.pop();
                j++;
            }
            if(j<n)st.push(j);
            j++;
        }
        return ans;
    }
};
