class Solution {
    public int maxOperations(int[] nums) {
        int op=1;
        int sameDiff=nums[0]+nums[1];
        for(int i=2;i<nums.length-1;i+=2){
            int diff=nums[i]+nums[i+1];
            if(diff!=sameDiff)return op;
            op++;
        }
        return op;
    }
}



