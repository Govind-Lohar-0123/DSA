class Solution {
    public int numberOfChild(int n, int k) {
       
        // if(k%n==0)return 0;
        // else if(n>k)return k;
        // int q=k/n;
        // int rem=k%n;
        // if(q%2==0)return rem;
        // return n-rem;
        int i=0;
        while(k!=0){
            while(i<n-1 && k!=0){
                i++;k--;
            }
            while(i>0 && k!=0){
                i--;k--;
            }
            
        }
        return i;
    }
}
