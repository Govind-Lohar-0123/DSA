class Solution {
public:
    bool checkInclusion(string s1, string s2) {
        int map1[26];
        int map2[26];
        int cnt=0;
        for(char &ch : s1)map1[ch-'a']++;
        int k=0;
        for(int i=0;i<26;i++){
            if(map1[i]!=0)k++;
        }
        int n=s2.size();
        int i=0,j=0;
        while(j<n){
            int ch=s2[j]-'a';
            map2[ch]++;
            if(map1[ch]==0){
                i=j+1;
                cnt=0;
                memset(map2,0,sizeof(map2));
                j++;
                continue;
            }
            if(map2[ch]==map1[ch])cnt++;
            while(map2[ch]>map1[ch]){
                int ch1=s2[i++]-'a';
                if(map2[ch1]==map1[ch1])cnt--;
                map2[ch1]--;
            }
            
            if(cnt==k)return true;
            j++;
        }
        return false;
    }
};
