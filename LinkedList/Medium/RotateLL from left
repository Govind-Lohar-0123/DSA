
class Solution{
    //Function to rotate a linked list.
  
       
    public Node rotate(Node head, int k) {
        int n=0;
        if(head==null||head.next==null)return head;
        Node curr=head;
        while(curr!=null)
           { curr=curr.next;n++;}
        int rem=k%n;
        if(rem==0 )return head;
        curr=head;
        Node prevNode=curr;
        rem--;
        while(rem-->0)curr=curr.next;
        head=curr.next;
        curr.next=null;
        curr=head;
        while(curr.next!=null)curr=curr.next;
        curr.next=prevNode;
        return head;
    }
    
}

